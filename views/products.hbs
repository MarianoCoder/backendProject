<h1>Products</h1>

<table id="main" role="grid">
    <tr>
        <th>Nombre</th>
        <th>Descripción</th>
        <th>Código</th>
        <th><a href="{{sortLink}}">Precio</a></th>
        <th>Stock</th>
        <th>Categoría</th>
    </tr>

    {{#each payload}}
    <tr>
        <td>{{this.title}}</td>
        <td>{{this.description}}</td>
        <td>{{this.code}}</td>
        <td>{{this.price}}</td>
        <td>{{this.stock}}</td>
        <td>{{this.category}}</td>
    </tr>
    {{/each}}

</table>

<p>Página actual: {{page}}</p>
{{#if prevLink}}
  <a href="{{prevLink}}" role="button">Anterior</a>
{{/if}}
{{#if nextLink}}
  <a href="{{nextLink}}" role="button">Siguente</a>
{{/if}}